@page
@model WebApp.Areas.User.Pages.Products.EditModel
@{
}
<h1>Edit</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" class="p-3" asp-page="/products/edit" asp-area="user">

            <input asp-for="Product.Id" hidden />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Product.Name" class="control-label">Name</label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label">Price</label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.IsActive" class="control-label">Price</label>
                <input asp-for="Product.IsActive" class="form-control" />
                <span asp-validation-for="Product.IsActive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary w-25" />
                <a asp-page="Index">Back to list</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
